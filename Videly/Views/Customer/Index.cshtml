
@model List<Videly.Models.TempCustomer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table>
    <thead></thead>
    @if (Model.Count == 0)
    {
        @:<tr><td> We don't have any customers yet </td></tr>
    }
    else{ 
    foreach (var customer in Model)
    {
        <tr><td><a href='/customer/details/@customer.Id'>@customer.Name</a></td></tr>
    }}
</table>