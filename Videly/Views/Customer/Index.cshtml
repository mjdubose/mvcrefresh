
@model List<Videly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table>
    <thead><tr>
        <th>Customer</th>
        <th>Rental Plan</th>
    </tr></thead>
    @if (Model.Count == 0)
    {
        @:<tr><td> We don't have any customers yet </td></tr>
    }
    else
    {
        foreach (var customer in Model)
        {
            <tr>
                <td><a href='/customer/details/@customer.Id'>@customer.Name</a></td>
                <td>@customer.MembershipType.MembershipTypeText <td>
            </tr>
        }
    }
</table>