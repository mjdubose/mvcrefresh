@model List<Videly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count == 0)
{
    <ul><li>There are no movies</li></ul>
}
else
{

    <table>
        <thead>
        <tr><td>Movie</td><td>Genre</td></tr>
        </thead>
            @foreach (var movie in Model)
            {
                <tr><td><a href='/movies/details/@movie.Id'>@movie.Name</a></td><td>@movie.Genre.GenreType</td></tr>
            }
       
    </table>
}