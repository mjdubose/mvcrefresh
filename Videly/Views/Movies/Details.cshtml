@model Videly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.GenreType</li>
    <li>Release Date: @Html.Encode($"{Model.ReleaseDate:MM/dd/yyyy}")</li>
    <li>Date Added: @Html.Encode($"{Model.DateAdded:MM/dd/yyyy}")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>